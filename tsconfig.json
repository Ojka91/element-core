{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2020"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./custom_typings", "./node_modules/@types"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": { 
     "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
